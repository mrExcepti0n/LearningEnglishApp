@using LearningEnglishWeb.ViewModels.Vocabulary
@model UserVocabulariesViewModel
@{
    ViewData["Title"] = "Vocabulare Page";
}

<div class="row justify-content-center">
    <div class="col-xl-8 col-sm-12 mb-3 mt-3">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner text-center">
                @for (var i = 0; i < Model.UserVocabularies.Count(); i += 3)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")  ">
                        @for (var j = i; j < i + 3 && j < Model.UserVocabularies.Count(); j++)
                        {
                            <div class="card d-inline-block" style="width: 12rem;">
                                <div class="card-header">  <a asp-action="Index" asp-controller="Vocabulary" asp-route-id="@Model.UserVocabularies[j].Id">@Model.UserVocabularies[j].Title  </a></div>
                                <div class="card-body">   количество слов @Model.UserVocabularies[j].WordsCount </div>
                            </div>
                        }
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="text-dark carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>


<div class="row justify-content-center">
    @await Html.PartialAsync("VocabularyWords", Model.UserWords)
</div>






@section Scripts {

    <script src="~/js/vocabulary.js">
    </script>
}
